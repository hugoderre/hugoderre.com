{% extends 'admin/body.html.twig' %}

{% block content %}
	<table class="admin-table-list">
        <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Date</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr>
                <td class="admin-posts__title">
                    <h2>
                        <a href="">{{ item.title }}</a>
                    </h2>
                </td>
                <td class="admin-posts__created-at">
                    <p>{{ item.createdAt|date('d/m/Y') }}</p>
                </td>
                <td class="admin-posts__actions">
                    <p>
                        <a href="">Edit</a>
                        <a href="{{ path('admin_post_delete', {'id': item.id }) }}">Delete</a>
                            {# {{ path('admin_post_edit', {'id': item.id}) }}
                            {{ path('admin_post_delete', {'id': item.id}) }} #}
                    </p>
                </td>
            </tr>
            {% endfor %}
        </tbody>
	</table>
{% endblock %}
