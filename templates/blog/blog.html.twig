{% extends 'base.html.twig' %}

{% block title %}Articles
{% endblock %}

{% block content %}

	<div class="container">
		
		<section class="row">
			{% for post in posts %}
				<article class="col-md-4 col-sm-6 col-12">
				<a href="{{ path('post', {slug: post.slug}) }}" class="">
					<div class="card">
						<div class="card__header">
							<h3 class="card__header-title">{{ post.title }}</h3>
						</div>
						<div class="card__footer">
							<ul class="card__footer__tags">
							{% for tag in post.tags %}
								<li class="card__footer__tags-tag">{{ tag.name }}</li>
							{% endfor %}
							</ul>
							<div class="card__footer__socials">
								<div class="card__footer__socials__likes">
									<i class="fa-solid fa-heart"></i>
									<span>0</span>
								</div>
								<div class="card__footer__socials__shares">
									<i class="fa-solid fa-share"></i>
									<span>0</span>
								</div>
								<div class="card__footer__socials__comments">
									<i class="fa-solid fa-comments"></i>
									<span>0</span>
								</div>
							</div>
						</div>
					</div>
				</a>
				</article>
			{% endfor %}
		</section>
	</div>

{% endblock %}
