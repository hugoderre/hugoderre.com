{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('hljs') }}
{% endblock %}

{% block meta_description -%}
	{% if post.metaDescription %}
		{{- post.metaDescription -}}
	{% else %}
		{{- post.content|striptags|u.truncate(160, '...', false) -}}
	{%- endif %}
{% endblock %}

{% block meta_image -%}
	{% if post.metaImage %}
		{{- uploadsBasePath ~ post.metaImage.fileName -}}
	{% elseif post.thumbnail %}
		{{- uploadsBasePath ~ post.thumbnail.fileName -}}
	{% else %}
		{{- parent() -}}
	{%- endif %}
{% endblock %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
	<div class="post__container">
		<div class="shape-divider">
			<div class="shape-divider__top">
				<div>
					<h1>{{ post.title }}</h1>
					{% if post.publishedAt %}
					<p class="post__date">Publi√© le {{ post.publishedAt|format_datetime(locale='fr',pattern="dd MMMM YYYY") }}</p>
					{% endif %}
				</div>
			</div>
			<svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
				<path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
			</svg>
		</div>
		<div class="row post__content">
			<div>
				{{ post.content|raw }}
			</div>
		</div>
		{{ include( "partials/block/comments.html.twig" ) }}
	</div>
{% endblock %}
