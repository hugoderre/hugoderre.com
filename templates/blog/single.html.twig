{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h1>{{ post.title }}</h1>
        <div class="row">
            <div class="col-6">
                {{ post.content }}
            </div>
            <div class="col-6">
                <img src="{{ post.thumbnail }}" alt="{ post.thumbnailAlt }" />
            </div>
        </div>
    </div>

{% endblock %}