{% extends 'base.html.twig' %}

{% block meta_description -%}
	{% if project.metaDescription %}
		{{- project.metaDescription -}}
	{% else %}
		{{- project.description|striptags|u.truncate(160, '...', false) -}}
	{%- endif %}
{% endblock %}

{% block meta_image -%}
	{% if project.metaImage %}
		{{- uploadsBasePath ~ project.metaImage.fileName -}}
	{% elseif project.thumbnail %}
		{{- uploadsBasePath ~ project.thumbnail.fileName -}}
	{% else %}
		{{- parent() -}}
	{%- endif %}
{% endblock %}

{% block title %}{{ project.name }} | Hugo Derr√©{% endblock %}

{% block content %}
	<div class="project__container">
		<div class="left">
			<div class="project__container__img">
			{% if project.gallery|length > 0 %}
				{% include "partials/block/slides.html.twig" with {'images': project.gallery} %}
			{% elseif project.thumbnail is not null  %}
				<img src="{{ uploadsBasePath ~ project.thumbnail.fileName }}" alt="{{ project.name }}">
			{% endif %}
			</div>
		</div>
		<div class="right">
			<div class="project__container__name page-title">
				<h1>{{ project.name }}</h1>
			</div>
			<div class="project__container__description">
				{{ project.description|raw }}
			</div>
			<div class="project__container__tags-container ">
				<ul>
				{% for tag in project.tags %}
					<li class="badge">{{ tag.name }}</li>
				{% endfor %}
				</ul>
			</div>
			<div class="project__container__links">
				<div class="project__container__links__website">
					<a href="{{ project.websiteUrl }}" target="_blank" rel="noopener noreferrer" title="Site Web" class="website-link"><i class="fa-solid fa-globe"></i><span>Voir le site</span></a>
				</div>
				<div class="project__container__links__github">
					<a href="{{ project.githubUrl }}" target="_blank" rel="noopener noreferrer" title="Github" class="github-link"><i class="fa-brands fa-github"></i><span>Voir le github du projet</span></a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
