{% extends 'base.html.twig' %}

{% block title %}Projets | Hugo Derr√©{% endblock %}

{% block content %}
    <div class="projects-container">
        <h1>Projets</h1>
        <section class="projects">
            {% for project in projects %}
                <article class="project">
                    <div class="project__img">
                        <img src="{{ asset('uploads/' ~ project.thumbnail.fileName) }}" alt="{{ project.name }}" width="400" height="250">
                    </div>
                    <div class="project__content">
                        <h2 class="product__name">
                            <a href="{{ path('project_view', {'slug': project.slug}) }}">{{ project.name }}</a>
                        </h2>
                        {# <p>{{ project.description|raw }}</p> #}
                        {# <p><a href="{{ path('project_view', {'slug': project.slug}) }}" class="btn btn-primary">Voir le projet</a></p> #}
                    </div>
                </article>
            {% endfor %}
        </section>
    </div>
{% endblock %}
